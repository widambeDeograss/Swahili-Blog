<%- include("partials/header"); -%>
  <!-- Page Header -->
  <!-- <header class="masthead" style="background-image: url('/img/post-bg.jpg')">"> -->
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <div class="post-preview" style="padding: 20px;margin-top: 70px; " >
              <!-- <a href="{{ url_for('show_post', index=post.id) }}"> -->
              <div class="post-title">
                  <img src='/img/0119578.jpg' alt="avatar" class="rounded-circle" style="width: 40px;">
                 <span> <%=requestedPost .author %></span>
                 <br>
                  <a href="#" style="text-decoration: none; margin-left: 10px;"> <strong> <%= requestedPost.postTitle %></strong>
                    <br>
                    <span style="font-size:x-small;margin-left: 10px; ">
                      <%= requestedPost.postDate %>
                    </span>
                  </a>
              </div>
            <img src='\<%= requestedPost.postPic %>' alt="blogpc" class="rounded-3" style="height: 45vh;">
            <h1><%= requestedPost.postTitle %></h1>
            <h4 class="subheading"><%= requestedPost.postsubTitle %></h4>
            <span class="meta">Posted by
              <a href="#"><%= requestedPost.author %></a>
              on <%= requestedPost.postDate %></span>
          </div>
        </div>
      </div>
    </div>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <p>
            <%= requestedPost.postbody %>
          </p>
          </div>
      </div>
    </div>
  </article>
  <div style="display: flex; flex-direction:row-reverse; width: 100%;">
  <section style="background-color: #f7f6f6; width: 40%;  " class="col-lg-6 col-md-10 mx-auto">
    <div class="container my-5 py-5 text-dark">
      <div class="row d-flex justify-content-center">
        <div class="col-md-12 col-lg-10 col-xl-8">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="text-dark mb-0">Comments</h4>
            </div>
          </div>

    <% for(let a=0; a < requestedPost.blogPostComments.length ; a++){ %>
    <div class="card mb-3 w-100">
      <div class="card-body">
        <div class="d-flex flex-start">
          <img class="rounded-circle shadow-1-strong me-3"
          src='/img/avatar-gfb2a973e4_1280.png' alt="avatar" width="40"
            height="40" />
          <div class="w-100">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <h6 class="text-primary fw-bold mb-0">
                <%= requestedPost.blogPostComments[a].name %>
                <br>
                <span class="text-dark ms-2"> <%= requestedPost.blogPostComments[a].comment %> </span>
              </h6>
            </div>
            <div class="d-flex justify-content-between align-items-center" style="margin-top: -30px;">
              <p class="small mb-0" style="color: #aaa;">
                <a href="#!" class="link-grey">Remove</a> •
                <a href="#!" class="link-grey">Reply</a> •
                <a href="#!" class="link-grey">Translate</a>
              </p>
              <div class="d-flex flex-row">
                <i class="fas fa-star text-warning me-2"></i>
                <i class="far fa-check-circle" style="color: #aaa;"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%}%>
</section>

      <!-- Main Content -->
      <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <p>Give a comment!</p>
                <form name="sentMessage" action="/posts" method="post" id="contactForm" novalidate>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>Name</label>
                            <input type="text" class="form-control" placeholder="Name"  name="name" id="name" required
                                data-validation-required-message="Please enter your name.">
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>Comment</label>
                            <textarea rows="5" class="form-control" placeholder="Message" name="comment" id="message" required
                                data-validation-required-message="Please enter a message."></textarea>
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <br>
                    <div id="success"></div>
                    <button type="submit" class="btn btn-primary" id="sendMessageButton" name="commentblog" value="<%= requestedPost._id %>">Send</button>
                </form>
              </div>
            </div>
          </div>
        </div>

  <hr>
  <br>

  <%- include("partials/footer"); -%>